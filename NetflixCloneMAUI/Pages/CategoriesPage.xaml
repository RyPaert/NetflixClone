<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetflixCloneMAUI.Pages.CategoriesPage"
             Title="CategoriesPage"
             Shell.PresentationMode="ModalAnimated"
             BackgroundColor="Transparent">
    <Grid>
        <BoxView Color="Black"
                 Opacity="0.9"/>

        <Button Text="X"
                VerticalOptions="End"
                HorizontalOptions="Center"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="50"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="25"
                Padding="0"
                FontAttributes="Bold"
                Margin="10"
                Clicked="CloseButton_Clicked">
            <Button.Shadow>
                <Shadow Brush="Red"
                        Offset="-10, 0"
                        Radius="40"
                        Opacity="1"/>
            </Button.Shadow>
        </Button>

    </Grid>
    
</ContentPage>